    {
      "cell_type": "code",
      "source": [
        "helpers = [\n",
        "    ql.UpfrontCdsHelper(\n",
        "        quote,\n",
        "        cds_spread,\n",
        "        tenor,\n",
        "        cds_settlement_days,\n",
        "        calendar,\n",
        "        ql.Quarterly,\n",
        "        ql.ModifiedFollowing,\n",
        "        ql.DateGeneration.CDS2015,\n",
        "        ql.Actual360(),\n",
        "        recovery_rate,\n",
        "        risk_free_curve,\n",
        "        upfront_settlement_days,\n",
        "    )\n",
        "    for tenor, quote in cds_data\n",
        "]\n",
        "\n",
        "probability_curve = ql.PiecewiseFlatHazardRate(\n",
        "    0, calendar, helpers, ql.Actual365Fixed()\n",
